{
  "name": "qa-scope",
  "version": "1.0.0",
  "private": true,
  "description": "QA Scope - Ferramenta de QA para gerenciar escopos de teste, tarefas e comandos",
  "author": {
    "name": "Advansoftware",
    "email": "contato@advansoftware.com.br"
  },
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "ELECTRON_DEV=true electron .",
    "electron:build": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:all": "npm run build && electron-builder --linux --win"
  },
  "build": {
    "appId": "com.advansoftware.qascope",
    "productName": "QA Scope",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": ".next/static",
        "to": ".next/standalone/.next/static"
      },
      {
        "from": "public",
        "to": ".next/standalone/public"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "electron/resources/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/resources/icon.png",
      "uninstallerIcon": "electron/resources/icon.png"
    }
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "^7.3.8",
    "@mui/material": "^7.3.8",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12"
  }
}